<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CocktailDetailsFragment"
    android:orientation="vertical"
    android:padding="@dimen/padding_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_bottom">

        <ImageButton
            android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_favorite_24"
            android:background="@color/transparent"
            android:contentDescription="@string/heart"
            android:layout_marginEnd="@dimen/heart_right" />

        <ImageButton
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_add_shopping_cart_24"
            android:contentDescription="@string/cart"
            android:background="@color/transparent"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="@dimen/image_scale"
        android:layout_height="@dimen/image_scale"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/element_padding"
        android:contentDescription="@string/cocktail"/>

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_padding"/>

    <TextView
        android:id="@+id/detail_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_padding"/>

    <TextView
        android:id="@+id/detail_glass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_padding"/>

    <TextView
        android:id="@+id/detail_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_padding"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_bottom"/>

</LinearLayout>